{
  "extends": ["react-app", "react-app/jest"],
  "plugins": ["import"],
  "rules": {
    "import/order": [
      "error",
      {
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": false
        },
        "groups": [
          "builtin",
          "external",
          "internal",
          ["parent", "sibling", "index", "object"],
          "type"
        ],
        "newlines-between": "always",
        "pathGroups": [
          {
            "pattern": "react",
            "group": "builtin"
          },
          {
            "pattern": "features/**",
            "group": "internal"
          },
          {
            "pattern": "utils/**",
            "group": "internal"
          },
          {
            "pattern": "utils",
            "group": "internal"
          },
          {
            "pattern": "constants/**",
            "group": "internal"
          },
          {
            "pattern": "modules",
            "group": "internal"
          },
          {
            "pattern": "modules/**",
            "group": "internal"
          },
          {
            "pattern": "constants/**",
            "group": "internal"
          },
          {
            "pattern": "components/**",
            "group": "internal"
          },
          {
            "pattern": "types/**",
            "group": "type"
          }
        ],
        "pathGroupsExcludedImportTypes": ["react", "react-native", "type"]
      }
    ]
  }
}
